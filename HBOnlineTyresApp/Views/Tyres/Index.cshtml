@model IEnumerable<Tyre>

@{
    ViewData["Title"] = "Tyres";
}

@*Wtite Code*@

<div class = "row">
    <div class = "col offset-md-1">
     <h4 class="align-middle text-center">TYRES</h4>
      
     @await Html.PartialAsync("_CreateItem", "Tyres")
        

        <table class ="table">
            <thead class = "text-center">
               
               <tr class="card-header text-white bg-danger"> 
                  <th> @Html.DisplayNameFor(model => model.ImageURL)</th>
                  <th> @Html.DisplayNameFor(model => model.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.category.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Manufacturer.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Description)</th>
                <th style = "min-width:200px">  </th>
               </tr>

            </thead>
            <tbody class = "text-center"> 
                @foreach (var item in Model)
                {
                    <tr>
                        <td class = "align-middle"> 
                            <img class = "" src ="@item.ImageURL" alt = "An Image is supposed to be here" style = "max-width: 150px"/>
                        </td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Name)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.category.Name)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Manufacturer.Name)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Description)</td>
                        <td class = "align-left"> 
                              @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                             {
                            <a class = "btn btn-outline-primary" asp-action ="Edit" asp-route-id = "@item.Id"><i class = "bi bi-pencil-square"></i></a>
                              <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class = "bi bi-trash"></i></button>
                           
                             }
                        </td>
                    </tr>
                }
            </tbody>
            


        </table>
    </div>


</div>
<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="tyreid" name="id"/>
</form>
 @section Scripts{
    <script>
        $(function(){
            $('.table').DataTable();
            $('.deleteBtn').click(function(e){
                swal({
                    title: "Your about to delete a record!!!",
                    text: "Are you sure you want to deleted this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) =>{
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#tyreid').val(id);
                        $('#deleteForm').submit();
                        swal("Deleted!", "Your Record has been Deleted", "success");
                        
                    }
                });
            });
        });
    </script>
}
