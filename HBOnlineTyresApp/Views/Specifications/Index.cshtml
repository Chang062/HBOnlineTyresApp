@model IEnumerable<Specification>

@{
    ViewData["Title"] = "Specification";
}

@*Wtite Code*@

<div class = "row">
    <div class = "col">
        <h1 class="align-middle text-center" style="font-family:Dubai">SPECIFICATIONS</h1>
        @await Html.PartialAsync("_CreateItem", "Specifications")
        <table class ="table">
            <thead class = "text-center">
               <tr class="card-header text-white bg-danger">
                 
                  <th> @Html.DisplayNameFor(model => model.Tyre.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Tyre.category.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Size)</th>
                  <th> @Html.DisplayNameFor(model => model.RimSize)</th>
                  <th> @Html.DisplayNameFor(model => model.ServiceDescription)</th>
                  <th> @Html.DisplayNameFor(model => model.SideWall)</th>
                  <th> @Html.DisplayNameFor(model => model.Diameter)</th>
                  <th> @Html.DisplayNameFor(model => model.MaxPSI)</th>
                  <th> @Html.DisplayNameFor(model => model.SectionWidth)</th>
                  <th> @Html.DisplayNameFor(model => model.MaxLoad)</th>
                  <th> @Html.DisplayNameFor(model => model.Weight)</th>
                  <th> @Html.DisplayNameFor(model => model.ThreadDept)</th>
                  <th> @Html.DisplayNameFor(model => model.AprovedRimWidth)</th>
                 <th> @Html.DisplayNameFor(model => model.Cost)</th>

                  <th style = ""> </th>
                  
               </tr>

            </thead>
            <tbody class = "text-center"> 
                @foreach (var item in Model)
                {
                    <tr>
                      
                        <td class = "align-middle">  @Html.DisplayFor(modelItem => item.Tyre.Name)</td>
                        <td class = "align-middle">  @Html.DisplayFor(modelItem => item.Tyre.category.Name)</td>
                        <td class = "align-middle "> @Html.DisplayFor(modelItem => item.Size)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.RimSize)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.ServiceDescription)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.SideWall)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Diameter)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.MaxPSI)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.SectionWidth)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.MaxLoad)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Weight)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.ThreadDept)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.AprovedRimWidth)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Cost)</td>

                        @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                             {
                            <td class = "align-middle" style = "min-width:120px"> 
                                 <a class = "btn btn-outline-primary" asp-action ="Edit" asp-route-id = "@item.Id"><i class = "bi bi-pencil-square "></i></a>
                                 <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class = "bi bi-trash"></i></button>
                            </td>
                             }
                    </tr>
                }
            </tbody>
            


        </table>
    </div>

</div>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="specsid" name="id"/>
</form>
 @section Scripts{
    <script>
        $(function(){
            $('.table').DataTable();
            $('.deleteBtn').click(function(e){
                swal({
                    title: "Your about to delete a record !!!",
                    text: "Are you sure you want to deleted this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) =>{
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#specsid').val(id);
                        $('#deleteForm').submit();
                        swal("Deleted!", "Your Record has been Deleted", "success");
                        
                    }
                });
            });
        });
    </script>
}