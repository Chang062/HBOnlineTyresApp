@using HBOnlineTyresApp.Data.ViewModels
@model MessageVM

@{
    ViewData["Title"] = "Messages";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Details</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="form-control" readonly/>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="PhoneNumber" class="control-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" readonly/>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DateReceived" class="control-label"></label>
                                <input asp-for="DateReceived" class="form-control"readonly/>
                                <span asp-validation-for="DateReceived" class="text-danger"></span>
                            </div>
                           
                            @* <div class="form-group">
                                <label asp-for="Viewed" class="control-label"></label>
                                <input asp-for="Viewed" class="form-control" readonly/>
                                <span asp-validation-for="Viewed" class="text-danger"></span>
                            </div>*@
                           
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="6" readonly></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                          @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                             {
                               <input type="submit" value="Mark as Read" class="btn btn-outline-success float-end" />
                                
                                <a class="btn btn-outline-secondary" asp-action="Messages">Back to list</a>
                             }
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>