@using HBOnlineTyresApp.Data.ViewModels
@model MessageVM

@{
    ViewData["Title"] = "Contact Us";
}


<div class="row">

    <div class="container-cont">
        <h1>@ViewData["Title"]</h1>
        <img src="~/Image/amg gt1.jpg" alt=img class="bg-image">    
    </div>

    <div class="container_form">
        <div class="content_form">
          <div class="left-side">

            <div class="address details">
              <i class="fas fa-map-marker-alt"></i>
              <div class="topic">Address</div>
              <div class="text-one">36 Bowen Road</div>
              <div class="text-two">Kingston 13</div>
            </div>

            <div class="phone details">
              <i class="fas fa-phone-alt"></i>
              <div class="topic">Phone</div>
              <div class="text-one">+1 (876)457-0753</div>
              <div class="text-two">+1 (876)490-8650</div>
            </div>

            <div class="email details">
              <i class="fas fa-envelope"></i>
              <div class="topic">Email</div>
              <div class="text-one">hbonlinetyres876@gmail.com</div>       
            </div>
          </div>
          <div class="right-side">
            <div class="topic-text">Send us a message</div>
            <p>Want to know more? Feel free to reach out to us and ask one of our experts will be happy to help.</p>

          <form asp-action = "Index">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             

                    <div class="input-box">
                      <input asp-for="FullName" placeholder="Enter your name">
                       <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                      <input asp-for="PhoneNumber" placeholder="Enter your email or contact number">
                       <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="input-box message-box">
                     <input asp-for="Description" placeholder="Write something"> 
                      <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="button">
                      <input type="submit" value="Send Now" >
                    </div>
                    
            
          </form>

        </div>
        </div>
      </div>


    


    <div class="container-map">
        <h1>Location</h1>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3794.7135592175423!2d-76.81599568563857!3d17.9920587898206!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8edb3fe898000875%3A0x799ec94bdc11bc32!2sBowen%20Rd%2C%20Kingston!5e0!3m2!1sen!2sjm!4v1657477113027!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

</div>

 @section Scripts{

    <script>
        var strValue = "@((string)ViewBag.msg)";
        if (strValue != null && strValue != '') {
            swal("Sent", strValue, "success");
        }
    </script>
      
 }

