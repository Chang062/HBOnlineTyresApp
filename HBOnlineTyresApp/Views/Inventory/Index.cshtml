@model IEnumerable<Inventory>

@{
    ViewData["Title"] = "Inventory";
}

@*Wtite Code*@

<div class = "row">
    <div class = "col-md-8 offset-2">
        <h3 class="align-middle text-center">INVENTORY</h3>
        @await Html.PartialAsync("_CreateItem", "Inventory")
        <table class ="table">
            <thead class = "text-center">
               <tr class="card-header text-white bg-danger">                    
                  <th> @Html.DisplayNameFor(model => model.Specifications.Tyre.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Specifications.Tyre.Manufacturer.Name)</th>
                  <th> @Html.DisplayNameFor(model => model.Specifications.Size)</th>
                  <th> @Html.DisplayNameFor(model => model.Quantity)
                  <th style = ""> </th>
                  
               </tr>

            </thead>
            <tbody class = "text-center"> 
                @foreach (var item in Model)
                {
                    <tr>
                        <td class = "align-middle">  @Html.DisplayFor(modelItem => item.Specifications.Tyre.Name)</td>
                        <td class = "align-middle "> @Html.DisplayFor(modelItem => item.Specifications.Tyre.Manufacturer.Name)</td>
                        <td class = "align-middle "> @Html.DisplayFor(modelItem => item.Specifications.Size)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td class = "align-middle"> 
                              @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                             {
                            <a class = "btn btn-outline-primary" asp-action ="Edit" asp-route-id = "@item.Id"><i class = "bi bi-pencil-square"></i></a>
                            <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button"><i class = "bi bi-trash"></i></button>
                             }
                        </td>

                    </tr>
                }
            </tbody>
            


        </table>
    </div>

</div>



<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="invid" name="id"/>
</form>
 @section Scripts{
    <script>
        $(function(){
            $('.table').DataTable();
            $('.deleteBtn').click(function(e){
                swal({
                    title: "Your about to delete a record!!!",
                    text: "Are you sure you want to deleted this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) =>{
                    if(confirm){
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#invid').val(id);
                        $('#deleteForm').submit();
                        swal("Deleted!", "Your Record has been Deleted", "success");
                        
                    }
                });
            });
        });
    </script>
}