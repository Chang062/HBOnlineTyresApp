@model List<Order>

@{ 
    ViewData["Title"] = "All orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>LIST OF ORDERS</h4>
        </p>

        <table class="table">
            <thead>
                <tr class="card-header text-white bg-danger">
                    <th>Details</th>
                    <th> Order ID</th>
                    <th>Paid</th>
                    <th>Date Purchased</th>
                  @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <th>User</th>
                        <th>Action</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                <tr>
                     <td class="align-middle">
                        <ul style="list-style-type:none">
                            @foreach (var item in order.OrderItems)
                            {
                                <li>@item.Inventory.Specifications.Tyre.Manufacturer.Name @item.Inventory.Specifications.Tyre.Name</li>
                                <li>Series: @item.Inventory.Specifications.Size @item.Inventory.Specifications.ServiceDescription</li>
                                <li style="padding-bottom:10px">Qty: @item.Amount </li>  
                                
                            }
                        </ul>
                    </td>
                    
                     <td class="align-middle">@order.Id</td>
                    <td class="align-middle">
                        @order.OrderItems.Select(m => m.Inventory.Specifications.Cost * m.Amount + (m.Inventory.Specifications.Cost * m.Amount * (.15))).Sum().ToString("c")
                    </td>
                     <td class="align-middle">@string.Format("{0:D}", order.OrderDate)</td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <td class="align-middle"> @order.User.FName </td>
                        <td class="align-middle">  <a class = "btn btn-danger" asp-action ="Delete" asp-route-id = "@order.Id"><i class = "bi bi-trash"></i> </a> </td>
                    }
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
    $('.table').DataTable();
        });

        var strValue = "@((string)ViewBag.delete)";
    if (strValue != null && strValue != '') {
        swal("Deleted", strValue, "success");
    }
        
    </Script>
 }