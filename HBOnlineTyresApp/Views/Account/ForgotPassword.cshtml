@using  HBOnlineTyresApp.Data.ViewModels;
@model ForgotPasswordVM;

@{ 
    ViewData["Title"] = "Forgot Password";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Forgot Your Password?</h4>
            <h6>Don't worry, resetting your password is easy<br />Just provie us with the email address you used to register your account.</h6>
        </p>
       
        <div class="row">
            <div class="col-md-8 offset-2">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                  
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>                   
                   
                  
                    <div class="form-group" style="padding-top:50px">
                         @Html.AntiForgeryToken()
                        <button class="btn btn-outline-success float-end" type="submit"> Submit</button>
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Login">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>