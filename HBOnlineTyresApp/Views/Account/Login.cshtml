@using  HBOnlineTyresApp.Data.ViewModels;
@model LoginVM;

@{ 
    ViewData["Title"] = "Log in to your account";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Log in to your account</h4>
        </p>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger text-center">
                <span> @TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <a style="padding-left:80px " ><img  src = "~/Image/Logo.png" style="max-width:200px"/></a>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group"> 
                         <a class="float-start forgotpswd"  asp-action="ForgotPassword">Forgot Password?</a> 
                         <span> </span>
                    </div>
                  
                    <div class="form-group" style="padding-top:50px">
                         @Html.AntiForgeryToken()
                        <input class="btn btn-outline-success float-end" type="submit" value="Log in" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>