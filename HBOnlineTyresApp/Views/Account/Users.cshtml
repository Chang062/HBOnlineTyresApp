@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

@*Wtite Code*@

<div class = "row">
    <div class = "col-md-8 offset-md-2">
        <h3 style="padding:20px"  class="text-center">ALL USERS</h3>

        <table class ="table">
            <thead class = "text-center">
               <thead class = "text-center">
               <tr class="card-header text-white bg-danger"> 
                  <th> Full Name</th>
                  <th> User Name</th>
                  <th> Email Address</th>
                  <th> Email Address Confirmed</th>
                
              
               </tr>

            </thead>
            <tbody class = "text-left"> 
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.FName)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.UserName)</td>
                        <td class = "align-middle"> @Html.DisplayFor(modelItem => item.Email)</td>
                        <td class = "text-center"> @Html.DisplayFor(modelItem => item.EmailConfirmed)</td>
                                                
                        
                    </tr>
                }
            </tbody>
            


        </table>
    </div>


</div>


@section Scripts{

    <script>
        $(document).ready(function () {
    $('.table').DataTable();
        });

   
    </Script>
 }